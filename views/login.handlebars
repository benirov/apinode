<form id="login" class="" method="post" encrypt="application/x-www-form-urlencoded">
  <input id="email" type="email" name="email" placeholder="email" autocomplete="off">
  <input type="submit"  value="Login">
  <br><br>
  <div id="token"></div>

</form>
<script>
  let form = document.querySelector('#login');
  

  form.addEventListener('submit', event =>
  {
    var formData = {email: document.querySelector('#email').value};
    event.preventDefault();
    fetch('/api/signin',
    {
      method: 'POST',
      body: JSON.stringify(formData),
      headers:{
      'Content-Type': 'application/json'
    }
    })
    .then(res => res.json())
    .then(data =>
      {
        alert(data.message);
        if(data.status == 200)
        {
          document.getElementById('token').innerHTML = '<p>copie este token y uselo en sus peticiones como autorizaci√≤n: <br>'+data.token+'</p>'
        }
        
      })
  })
</script>
